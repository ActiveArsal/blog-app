<% include ./partials/header %>

<div class='ui main text container segment shadow mb-5'>
    <div class='ui huge header'>Edit Post: <%= blog.title %></div>
    <form class='ui form' action='/blogs/<%= blog._id %>?_method=PUT' method='POST'>
        <div class='field'>
            <label>Title</label>
            <input type='text' name='blog[title]' value='<%= blog.title %>'>
        </div>
        <div class='field'>
            <label>Image</label>
            <input type='text' name='blog[image]' value='<%= blog.image %>'>
        </div>
        <div class='field'>
            <label>Blog Content</label>
            <textarea name='blog[body]' required><%= blog.body %></textarea>
        </div>
        
        <input class='ui teal big button hover' type='submit'>
        <a class='ui teal big basic button hover' href='/blogs/<%= blog._id %>'><i class='arrow left icon'></i>Back</a>
        
    </form>
</div>

<% include ./partials/footer %>
